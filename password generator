import random
import string
print("welcome to our random password genrator")
def main( ):
    length =int(input("enter the length of password you want:"))
    lower0=string.ascii_lowercase
    upper0=string.ascii_uppercase
    digit0=string.digits
    symbols0=string.punctuation
    combine=lower0+upper0+digit0+symbols0
    x=random.sample(combine,length)
    password="".join(x)
    print(password)
    main()
main()